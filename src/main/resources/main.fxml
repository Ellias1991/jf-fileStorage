<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="com.gbElliasFileStorage.Controller">

    <MenuBar>
        <Menu text="Файл">
            <MenuItem text="Выйти из программы" />
        </Menu>
    </MenuBar>

    <HBox>
        <ComboBox />
            <TextField editable="false" HBox.hgrow="ALWAYS" />
        <Button text="Вверх" />

    </HBox>
    <TableView fx:id="filesTable" VBox.vgrow="ALWAYS" />
     <HBox spacing="5">
         <Button maxWidth="Infinity" text="Копировать файл" HBox.hgrow="ALWAYS" />
         <Button maxWidth="Infinity" text="Переместить файл" HBox.hgrow="ALWAYS" />
         <Button maxWidth="Infinity" text="Удалить файл" HBox.hgrow="ALWAYS" />
         <Button maxWidth="Infinity" text="Выход из программы" HBox.hgrow="ALWAYS" onAction="#btnExitAction" />
     </HBox>

    <Label fx:id="welcomeText" />
    <Button onAction="#onHelloButtonClick" text="Hello!">
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding></Button>


    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
